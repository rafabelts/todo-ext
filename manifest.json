{
    "name": "todoer",
    "version": "0.0.1",
    "manifest_version": 3,

    "background": {
        "service_worker": "main.js",
        "type": "module"
    },

    "browser_actions": {
        "default_title": "Todoer",
        "default_popup": "index.html",
        "default_icon": {
           "32": "/assets/images.jpg" 
        }
    },

    "permissions": ["storage", "activeTab", "scripting"]
}
